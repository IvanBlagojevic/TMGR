<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:context="http://www.springframework.org/schema/context"
       xmlns:hz="http://www.hazelcast.com/schema/spring" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
                http://www.springframework.org/schema/context
                http://www.springframework.org/schema/context/spring-context-4.3.xsd
                http://www.hazelcast.com/schema/spring
                http://www.hazelcast.com/schema/spring/hazelcast-spring.xsd">

    <context:component-scan base-package="org.gs4tr.termmanager.cache.impl"/>

    <context:component-scan base-package="org.gs4tr.termmanager.cache.entity.view.provider"/>

    <context:component-scan base-package="org.gs4tr.termmanager.cache.entry.processor.executor"/>

    <context:component-scan base-package="org.gs4tr.termmanager.cache.view.provider"/>

    <context:component-scan base-package="org.gs4tr.termmanager.cache.config"/>

    <hz:hazelcast id="internal">
        <hz:config>
            <hz:group password="${hz.group.password}" name="${hz.group.name}"/>
            <hz:management-center enabled="${hz.management.center.enabled}"
                                  url="${hz.management.center.url}"/>
            <hz:properties>
                <hz:property name="hazelcast.jmx">${hz.jmx}</hz:property>
                <hz:property name="hazelcast.jmx.detailed">${hz.jmx.detailed}</hz:property>
                <hz:property name="hazelcast.logging.type">${hz.logging.type}</hz:property>
                <hz:property name="hazelcast.operation.thread.count">${hz.operation.thread.count}
                </hz:property>
            </hz:properties>
            <hz:network port="${hz.network.port}" port-auto-increment="true">
                <hz:join>
                    <hz:multicast enabled="${hz.multicast.enabled}"/>
                    <hz:tcp-ip enabled="${hz.tcp-ip.enabled}">
                        <hz:members>${hz.members}</hz:members>
                    </hz:tcp-ip>
                </hz:join>
            </hz:network>
            <hz:map name="importProgressStatusCache" backup-count="0"
                    time-to-live-seconds="0" max-size="0" eviction-policy="NONE"
                    max-idle-seconds="30" in-memory-format="OBJECT">
            </hz:map>
            <hz:map name="analysisProgressStatusCache" backup-count="0"
                    time-to-live-seconds="0" max-size="0" eviction-policy="NONE"
                    max-idle-seconds="30" in-memory-format="OBJECT">
            </hz:map>
            <hz:map name="exportProgressStatusCache" backup-count="0"
                    time-to-live-seconds="0" max-size="0" eviction-policy="NONE"
                    max-idle-seconds="1200" in-memory-format="OBJECT">
            </hz:map>
            <hz:map name="batchProcessingStatusCache" backup-count="0"
                    time-to-live-seconds="0" max-size="0" eviction-policy="NONE"
                    max-idle-seconds="30" in-memory-format="OBJECT">
            </hz:map>
            <hz:map name="wsV1UsersSessionsCache" backup-count="0"
                    time-to-live-seconds="0" eviction-policy="LRU" max-idle-seconds="1200"
                    max-size="10" eviction-percentage="25" max-size-policy="FREE_HEAP_PERCENTAGE">
                <hz:near-cache time-to-live-seconds="0"
                               max-idle-seconds="1200" in-memory-format="OBJECT"
                               cache-local-entries="true" eviction-policy="LRU" max-size="5000"
                               invalidate-on-change="true"></hz:near-cache>
            </hz:map>
            <hz:map name="wsV2UsersSessionsCache" backup-count="0"
                    time-to-live-seconds="0" eviction-policy="LRU" max-idle-seconds="1200"
                    max-size="10" eviction-percentage="25" max-size-policy="FREE_HEAP_PERCENTAGE">
                <hz:near-cache time-to-live-seconds="0"
                               max-idle-seconds="1200" in-memory-format="OBJECT"
                               cache-local-entries="true" eviction-policy="LRU" max-size="5000"
                               invalidate-on-change="true"></hz:near-cache>
            </hz:map>
            <hz:map name="v1GlossarySessionsCache" backup-count="0"
                    time-to-live-seconds="0" eviction-policy="LRU" max-idle-seconds="1200"
                    max-size="10" eviction-percentage="25" max-size-policy="FREE_HEAP_PERCENTAGE">
                <hz:near-cache time-to-live-seconds="0"
                               max-idle-seconds="1200" in-memory-format="OBJECT"
                               cache-local-entries="true" eviction-policy="LRU" max-size="1000"
                               invalidate-on-change="true"></hz:near-cache>
            </hz:map>
            <hz:map name="v2GlossarySessionsCache" backup-count="0"
                    time-to-live-seconds="0" eviction-policy="LRU" max-idle-seconds="1200"
                    max-size="10" eviction-percentage="25" max-size-policy="FREE_HEAP_PERCENTAGE">
                <hz:near-cache time-to-live-seconds="0"
                               max-idle-seconds="1200" in-memory-format="OBJECT"
                               cache-local-entries="true" eviction-policy="LRU" max-size="5000"
                               invalidate-on-change="true"></hz:near-cache>
            </hz:map>

            <hz:map name="rememberMeTokensMap" time-to-live-seconds="${rememberme.token.validity}"/>

            <hz:map name="spring:session:sessions" max-idle-seconds="172800">
                <hz:indexes>
                    <hz:index attribute="principal" ordered="false"/>
                </hz:indexes>
            </hz:map>

            <hz:serialization>
                <hz:data-serializable-factories>
                    <hz:data-serializable-factory factory-id="6666"
                                                  class-name="org.gs4tr.foundation.modules.webmvc.sessionmanagement.HazelcastSessionDataSerializableFactory"/>
                </hz:data-serializable-factories>
            </hz:serialization>
        </hz:config>
    </hz:hazelcast>

</beans>