<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.gs4tr.termmanager</groupId>
        <artifactId>gs4tr-termmanager</artifactId>
        <version>5.5.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <groupId>org.gs4tr.termmanager</groupId>
    <artifactId>gs4tr-termmanager-webapp</artifactId>
    <name>Term Manager Web Application</name>
    <packaging>war</packaging>

    <properties>
        <applicationName>Term Manager</applicationName>
        <versionPackageName>org.gs4tr.termmanager.webapp</versionPackageName>
    </properties>

    <profiles>
        <profile>
            <!-- internal profile skips apps-ui dependency to create build without UI -->
            <id>internal</id>
            <build>
                <plugins>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>webapp</id>
                                <phase>validate</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.gs4tr.foundation.modules</groupId>
                                            <artifactId>gs4tr-foundation-modules-mvc</artifactId>
                                            <version>${foundationModules.version}</version>
                                            <type>jar</type>
                                            <includes>**/*.jsp,**/index-template.html</includes>
                                            <outputDirectory>
                                                ${project.build.directory}/${project.artifactId}-${project.version}/WEB-INF
                                            </outputDirectory>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>webapp</id>
                                <phase>validate</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.gs4tr.apps.ui</groupId>
                                            <artifactId>gs4tr-apps-ui</artifactId>
                                            <version>${apps-ui.Version}</version>
                                            <classifier>tmgr</classifier>
                                            <type>zip</type>
                                            <outputDirectory>
                                                ${project.build.directory}/${project.artifactId}-${project.version}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.gs4tr.foundation.modules</groupId>
                                            <artifactId>gs4tr-foundation-modules-mvc</artifactId>
                                            <version>${foundationModules.version}</version>
                                            <type>jar</type>
                                            <includes>**/*.jsp,**/index-template.html</includes>
                                            <outputDirectory>
                                                ${project.build.directory}/${project.artifactId}-${project.version}/WEB-INF
                                            </outputDirectory>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>org.gs4tr.foundation.modules</groupId>
            <artifactId>gs4tr-foundation-modules-security</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.apache.xmlgraphics</groupId>
                    <artifactId>batik-css</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.gs4tr.foundation.modules</groupId>
            <artifactId>gs4tr-foundation-modules-jmx</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.gs4tr.foundation.modules</groupId>
                    <artifactId>gs4tr-foundation-modules-security</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>gs4tr-termmanager-webmvc</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.gs4tr.foundation.modules</groupId>
                    <artifactId>gs4tr-foundation-modules-security</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.gs4tr.foundation.modules</groupId>
                    <artifactId>gs4tr-foundation-modules-mvc</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>gs4tr-termmanager-glossary</artifactId>
        </dependency>

        <dependency>
            <groupId>org.gs4tr.foundation.modules</groupId>
            <artifactId>gs4tr-foundation-modules-mvc</artifactId>
            <classifier>${foundation.modules.mvc.classifier}</classifier>
        </dependency>

        <dependency>
            <groupId>org.gs4tr.termmanager</groupId>
            <artifactId>gs4tr-termmanager-migration</artifactId>
        </dependency>

        <dependency>
            <groupId>org.gs4tr.termmanager</groupId>
            <artifactId>gs4tr-termmanager-webservice</artifactId>
        </dependency>

        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
        </dependency>

        <dependency>
            <groupId>net.sourceforge.jtds</groupId>
            <artifactId>jtds</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>gs4tr.com.thoughtworks</groupId>
            <artifactId>com.thoughtworks.xstream</artifactId>
        </dependency>

        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>jaxb-api</artifactId>
        </dependency>

        <!-- CAS dependencies -->
        <dependency>
            <groupId>org.springframework.security</groupId>
            <artifactId>spring-security-cas</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jasig.cas.client</groupId>
            <artifactId>cas-client-core</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>commons-logging</groupId>
                    <artifactId>commons-logging</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.opensaml</groupId>
            <artifactId>opensaml</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>xalan</groupId>
                    <artifactId>xalan</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>xml-resolver</groupId>
                    <artifactId>xml-resolver</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>xerces</groupId>
                    <artifactId>xercesImpl</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>commons-collections</groupId>
                    <artifactId>commons-collections</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>commons-codec</groupId>
                    <artifactId>commons-codec</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>commons-lang</groupId>
                    <artifactId>commons-lang</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.apache.santuario</groupId>
            <artifactId>xmlsec</artifactId>
        </dependency>
        <!-- CAS dependencies -->

        <!-- ant-contrib file loading -->
        <dependency>
            <groupId>ant-contrib</groupId>
            <artifactId>ant-contrib</artifactId>
            <version>1.0b3</version>
            <exclusions>
                <exclusion>
                    <groupId>ant</groupId>
                    <artifactId>ant</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-war</id>
                        <phase>package</phase>
                        <configuration>
                            <webXml>src/main/webapp/WEB-INF/web.xml</webXml>
                            <warName>${gs4trWarName}</warName>
                            <packagingExcludes>${cssTestingExclude}</packagingExcludes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>maven-jetty-plugin</artifactId>
                <configuration>
                    <jettyEnvXml>src/test/resources/jetty-env.xml</jettyEnvXml>
                    <contextPath>/</contextPath>
                    <webDefaultXml>src/main/resources/webdefault.xml</webDefaultXml>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.github.kongchen</groupId>
                <artifactId>swagger-maven-plugin</artifactId>
                <version>3.1.6</version>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <apiSources>
                        <apiSource>
                            <springmvc>true</springmvc>
                            <locations>
                                <location>org.gs4tr.termmanager.webservice.controllers</location>
                            </locations>
                            <basePath>/TMGR</basePath>
                            <info>
                                <title>TMGR API</title>
                                <version>v1</version>
                                <description>TMGR api</description>
                            </info>
                            <swaggerDirectory>
                                ${project.build.directory}/${project.artifactId}-${project.version}/public/docs
                            </swaggerDirectory>
                            <swaggerFileName>swagger</swaggerFileName>
                        </apiSource>
                    </apiSources>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>build-packages-and-push-to-local-repo</id>
                        <phase>prepare-package</phase>
                        <configuration>
                            <target>
                                <taskdef resource="net/sf/antcontrib/antlib.xml"
                                         classpathref="maven.compile.classpath"/>

                                <echo message="Building index.jsp"/>
                                <property name="webappFolder"
                                          value="${project.build.directory}/${project.artifactId}-${project.version}"/>
                                <if>
                                    <available file="${webappFolder}/WEB-INF/pages/index-template.html"/>
                                    <then>
                                        <loadfile property="indexTemplates"
                                                  srcFile="${webappFolder}/WEB-INF/pages/index-template.html"/>

                                        <propertyregex property="nonce" input="${indexTemplates}"
                                                       regexp="&lt;!--###NONCE_START###--&gt;((?s).*)&lt;!--###NONCE_END###--&gt;"
                                                       select="\1" casesensitive="false"/>
                                        <propertyregex property="springTags" input="${indexTemplates}"
                                                       regexp="&lt;!--###SPRING_TAGS_START###--&gt;((?s).*)&lt;!--###SPRING_TAGS_END###--&gt;"
                                                       select="\1" casesensitive="false"/>
                                        <propertyregex property="isImpersonated" input="${indexTemplates}"
                                                       regexp="&lt;!--###IMPERSONATED_START###--&gt;((?s).*)&lt;!--###IMPERSONATED_STOP###--&gt;"
                                                       select="\1" casesensitive="false"/>

                                        <copy file="${webappFolder}/index.html"
                                              tofile="${webappFolder}/WEB-INF/pages/index.jsp"/>
                                        <delete file="${webappFolder}/index.html"/>
                                        <replace file="${webappFolder}/WEB-INF/pages/index.jsp"
                                                 token="###applicationName###" value="${applicationName}"/>
                                        <replace file="${webappFolder}/WEB-INF/pages/index.jsp"
                                                 token="&lt;!--###IMPERSONATE_PLACEHOLDER###--&gt;"
                                                 value="${isImpersonated}"/>
                                        <replace file="${webappFolder}/WEB-INF/pages/index.jsp"
                                                 token="###NONCE_PLACEHOLDER###" value="${nonce}"/>
                                        <replace file="${webappFolder}/WEB-INF/pages/index.jsp"
                                                 token="&lt;!--###SPRING_TAGS_PLACEHOLDER###--&gt;"
                                                 value="${springTags}"/>
                                        <replace file="${webappFolder}/WEB-INF/pages/index.jsp"
                                                 token="###APP_LOADING_NAME###"
                                                 value="${applicationName} ${parent.version}"/>
                                        <replace file="${webappFolder}/WEB-INF/pages/index.jsp" token="&lt;script"
                                                 value="&lt;script nonce=&quot;${nonce}&quot;"/>

                                        <echo>File index.jsp created successfully</echo>
                                    </then>
                                    <else>
                                        <echo level="error">File index.jsp not created</echo>
                                    </else>
                                </if>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>swagger-ui</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.gs4tr.query.manager</groupId>
                                    <artifactId>gs4tr-query-manager-swagger-ui</artifactId>
                                    <version>0.1.0</version>
                                    <type>zip</type>
                                    <outputDirectory>
                                        ${project.build.directory}/${project.artifactId}-${project.version}/public
                                    </outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
